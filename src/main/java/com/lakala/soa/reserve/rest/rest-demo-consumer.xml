    <!-- directly connect to provider to simulate the access to non-soa rest services -->
    <!--<soa:reference id="anotherUserRestService" interface="com.lakala.soa.examples.rest.api.AnotherUserRestService" url="rest://localhost:8080/services/"/>-->
    <soa:reference id="anotherUserRestService" interface="com.lakala.soa.examples.rest.api.AnotherUserRestService" url="rest://localhost:8080/dssp/services/rest/"/>

	<bean id="consumerBean" class="com.lakala.soa.examples.rest.ConsumerBean">
        <property name="anotherUserRestService" ref="anotherUserRestService"/>
